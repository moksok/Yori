<body class="login" ng-app="YORI">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            <img src="https://s3-us-west-2.amazonaws.com/seokbucket/yori/yorilogo_registration_login.png"
                 alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content"ng-controller="registrationController as reg">        
        <!-- BEGIN REGISTRATION FORM -->
        <form class="register-form" ng-submit="reg.submitRegistration()" id="userRegistrationForm" name="reg.userRegistrationForm" novalidate>
            <h3>Sign Up For Yori</h3>
            <p> Please enter your full name (optional) </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">First Name</label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>
                    <input class="form-control placeholder-no-fix"
                            type="text"
                            placeholder="First Name"
                            name="firstname"
                            ng-model="reg.newUser.Firstname"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Last Name</label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>
                    <input class="form-control placeholder-no-fix"
                            type="text"
                            placeholder="Last Name"
                            name="lastname"
                            ng-model="reg.newUser.Lastname"/>
                </div>
            </div>
            <p> Please enter a username, email and password </p>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control ng-class=:{'error': reg.showRegistrationError && !reg.userRegistrationForm.username.$valid}"
                            type="text"
                            autocomplete="off"
                            placeholder="Username"
                            name="username"
                            id="username"
                            ng-model="reg.newUser.Username"
                            required/>
                </div>

                <div role="alert" class="help-inline error">
                    <!-- dashboard.showNewEmployeeErrors is set to true the first time the form is submitted. this happens in the dashboard.addEmployee() function. -->
                    <span class="error" ng-show="reg.showRegistrationError && reg.userRegistrationForm.username.$error.required">Username is required</span> <!-- errors for specific fields can be accessed with the syntax [form name].[field name].$error.[validator name] -->
                </div>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email</label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control ng-class:{'error': reg.showRegistrationError && !reg.userRegistrationForm.email.$valid}"
                            type="email"
                            placeholder="Email"
                            name="email"
                            id="email"
                            ng-model="reg.newUser.Email"
                            required/>
                </div>

                <div role="alert" class="help-inline error">
                    <!-- dashboard.showNewEmployeeErrors is set to true the first time the form is submitted. this happens in the dashboard.addEmployee() function. -->
                    <span class="error" ng-show="reg.showRegistrationError && reg.userRegistrationForm.email.$error.required">Email is required</span> <!-- errors for specific fields can be accessed with the syntax [form name].[field name].$error.[validator name] -->
                    <span class="error" ng-show="reg.showRegistrationError && reg.userRegistrationForm.email.$error.email">Must be a valid email address</span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control ng-class:{'error': reg.showRegistrationError && !reg.userRegistrationForm.userName.$valid}""
                            type="password"
                            autocomplete="off"
                            id="register_password"
                            placeholder="Password"
                            name="password"
                            ng-model="reg.newUser.Password"
                            ng-minlength="6"
                            required/>
                </div>

                <div role="alert" class="help-inline error">
                    <!-- dashboard.showNewEmployeeErrors is set to true the first time the form is submitted. this happens in the dashboard.addEmployee() function. -->
                    <span class="error" ng-show="reg.showRegistrationError && reg.userRegistrationForm.password.$error.required">Password is required</span> <!-- errors for specific fields can be accessed with the syntax [form name].[field name].$error.[validator name] -->
                    <span class="error" ng-show="reg.showRegistrationError && reg.userRegistrationForm.password.$error.minlength">Too short! Password must be at least 6 characters</span>
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div id="register_tnc_error"> </div>
            </div>
            <p>Already have an account?</p>
            <div class="form-actions">
                <!--<button id="register-back-btn" type="button" class="btn red btn-outline"> Log In </button>-->
                <a href="/login/index" class="btn red btn-outline"> Log In </a>
                <button type="submit" id="register-submit-btn" class="btn green pull-right"> Sign Up </button>
            </div>
        </form>
        <!-- END REGISTRATION FORM -->
    </div>
